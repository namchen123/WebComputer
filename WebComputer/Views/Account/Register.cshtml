@model RegisterViewModel


@if (TempData["Message"] != null)
{
    <script>
        alert('@TempData["Message"]');
    </script>
}
<form asp-action="Register" method="post" class="w-25 m-auto d-flex flex-column p-2 shadow rounded border-1">
    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <label asp-for="Password2"></label>
        <input asp-for="Password2" type="password" class="form-control" />
        <span asp-validation-for="Password2" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Register</button>    
</form>

