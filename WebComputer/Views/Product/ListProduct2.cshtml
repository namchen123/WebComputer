@{
    Layout = "~/Views/Shared/ComputerLayout.cshtml";
}
@model IEnumerable<Product>
<div id="mainbody" class="mt-3 row">
    <div class="mt-2">
        <h4>Hãng sản xuất</h4>
        <div id="brand" class="d-flex">
            <a class="" href="">
                <img style="height: 20px;" src="~/images/brand/asus.png" alt="">
            </a>
            <a class="" href="">
                <img style="height: 20px;" src="~/images/brand/acer.png" alt="">
            </a>
            <a class="" href="">
                <img style="height: 20px;" src="~/images/brand/dell.png" alt="">
            </a>
            <a class="" href="">
                <img style="height: 20px;" src="~/images/brand/hp.png" alt="">
            </a>
            <a class="" href="">
                <img style="height: 20px;" src="~/images/brand/gigabyte.png" alt="">
            </a>
            <a class="" href="">
                <img style="height: 20px;" src="~/images/brand/microsoft.png" alt="">
            </a>
            <a class="" href="">
                <img style="height: 20px;" src="~/images/brand/macbook.png" alt="">
            </a>
        </div>
    </div>

    <div class="banner mt-5 mb-5">
        <img src="~/images/category/@(ViewBag.categoryname).png" alt="">
    </div>

    <div class="mt-2">
        <div class="productItems flex-wrap" style="position: relative;">
            @foreach (var i in ViewBag.product)
            {
                <div class="item">
                    <a href="#">
                        <img src="@i.Image1" height="190px" alt="" />
                    </a>
                    <div class="detail">
                        <p>
                            @i.Name
                        </p>
                    </div>
                    <div class="price"><p>@i.Price.ToString("N0") đ</p></div>
                    <div class="state mb-2">
                        <div class="d-flex">
                            <p>Còn hàng</p>
                            <a asp-controller="Product" asp-action="ProductDetail" asp-route-productId=@i.ProductId style="width: 51px">
                                <button style="width: 50px; background-color: red">
                                    <i class="fa-solid fa-cart-shopping"></i>
                                </button>
                            </a>
                        </div>
                    </div>
                </div>
            }


        </div>
        <a class="d-flex justify-content-center mt-3 text-decoration-none" asp-action="ListProduct" asp-route-categoryId="@ViewBag.categoryid">
            <button class="btn btn-primary">Xem thêm sản phẩm</button>
        </a>
    </div>

    <div class="banner mt-5 mb-5">
        <img src="~/images/category/@(ViewBag.categoryname2).png" alt="">
    </div>

    <div class="mt-2">
        <div class="productItems flex-wrap" style="position: relative;">
            @foreach (var i in ViewBag.product2)
            {
                <div class="item">
                    <a href="#">
                        <img src="@i.Image1" height="190px" alt="" />
                    </a>
                    <div class="detail">
                        <p>
                            @i.Name
                        </p>
                    </div>
                    <div class="price"><p>@i.Price.ToString("N0") đ</p></div>
                    <div class="state mb-2">
                        <div class="d-flex">
                            <p>Còn hàng</p>
                            <a asp-controller="Product" asp-action="ProductDetail" asp-route-productId=@i.ProductId style="width: 51px">
                                <button style="width: 50px; background-color: red">
                                    <i class="fa-solid fa-cart-shopping"></i>
                                </button>
                            </a>
                        </div>
                    </div>
                </div>
            }


        </div>
        <a class="d-flex justify-content-center mt-3" asp-action="ListProduct" asp-route-categoryId="@ViewBag.categoryid2">
            <button class="btn btn-primary">Xem thêm sản phẩm</button>
        </a>
    </div>
    
</div>

