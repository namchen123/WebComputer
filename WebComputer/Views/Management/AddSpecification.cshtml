@model WebComputer.Models.ProductSpecification

@{
    ViewData["Title"] = "AddSpecification";
    Layout = "~/Views/Shared/ManagementLayout.cshtml";
}
@if (TempData["Message"] != null)
{
    <script>
        alert('@TempData["Message"]');
    </script>
}
<h1>AddSpecification</h1>

<h4>ProductSpecification</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddSpecificationSuccess">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">@ViewBag.product.Name</label>
                <input hidden asp-for="ProductId" class ="form-control" value=@ViewBag.product.ProductId></input>
            </div>
            <div class="form-group">
                <label asp-for="SpecificationId" class="control-label"></label>
                <select asp-for="SpecificationId" class="form-control" asp-items="ViewBag.productSpecification"></select>
            </div>
            <div class="form-group">
                <label asp-for="SpecificationValue" class="control-label"></label>
                <input asp-for="SpecificationValue" class="form-control" />
                <span asp-validation-for="SpecificationValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

